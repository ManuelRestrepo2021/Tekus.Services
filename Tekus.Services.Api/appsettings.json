{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\MSSQLSERVER02;Database=TekusServicesDb;Trusted_Connection=True;Trust Server Certificate=true"
  },

  "JwtSettings": {
    // Clave secreta usada para firmar los tokens JWT.
    // En producción debe ser más larga y mantenerse fuera del código fuente.
    "Key": "SuperClaveSecretaTekus_1234567890_ABCDEFGHIJKLMNOPQRSTUVWXYZ",

    // Emisor del token (normalmente la URL o nombre de tu API).
    "Issuer": "Tekus.Services.Api",

    // Audiencia del token (quién va a consumir el token).
    "Audience": "Tekus.Services.Client",

    // Minutos de duración del token.
    "ExpiresInMinutes": 60
  },

  "DefaultUser": {
    // Usuario por defecto para autenticación
    "Username": "admin",
    // Contraseña por defecto
    "Password": "Admin123!"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}